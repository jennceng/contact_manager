<h1>Contacts</h1>

<ul>
  <% @contacts.each do |contact| %>

    <li><a href="/contacts/<%=contact.id%>"><%= contact.name %></a> - <%= contact.phone_number %></li>
  <% end %>
</ul>

<% if @page_number > 1 %>
  <a href="/<%=@page_number - 1%>"> Previous </a>
<% end %>

<a href="/<%=@page_number + 1%>"> Next </a>

<form action="/contacts/" method="get">
    <label for="search">Search:</label>
    <input type="text" id="search" name="search">
    <input type="submit">
</form>
